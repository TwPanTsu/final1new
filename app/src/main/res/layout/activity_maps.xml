<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:map="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MapsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#BDEABE">

        <!-- 按鈕：回到home -->
        <Button
            android:id="@+id/returnmenu_btn_chatroom"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="首頁"
            android:textColor="@color/black" />
        <!-- 標題：聊天室 -->


        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text="地圖"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textofnull"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_buttons_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_for_maptype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="地圖樣式" />


        <Spinner
            android:id="@+id/spinner_map_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Switch
            android:id="@+id/add_marker_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:showText="true"
            android:text="加入標記"
            android:textOff="關"
            android:textOn="開"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linearLayout_buttons"
        android:layout_below="@id/linearLayout_buttons_map"
        android:layout_marginBottom="54dp"/>

    <!-- 底部按鈕排列 -->
    <LinearLayout
        android:id="@+id/linearLayout_buttons"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@id/map"
        android:layout_marginBottom="0dp"
        android:background="#E1E1E1"
        android:orientation="horizontal">

        <!-- 按鈕：地圖 -->
        <Button
            android:id="@+id/map_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="地圖"
            android:textColor="@color/black" />

        <!-- 按鈕：聊天室 -->
        <Button
            android:id="@+id/chatroom_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="聊天室"
            android:textColor="@color/black" />

        <!-- 按鈕：群組資訊 -->
        <Button
            android:id="@+id/group_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="群組資訊"
            android:textColor="@color/black" />

        <!-- 按鈕：行程 -->
        <Button
            android:id="@+id/schedule_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="行程"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>